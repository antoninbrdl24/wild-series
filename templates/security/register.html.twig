{% extends 'base.html.twig' %}

{% block title %}Nouveau compte{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 class="mx-sm-4">Cr√©ation de votre compte </h1>

    {{ form_errors(registrationForm) }}
    {{ form_start(registrationForm, {'attr': {'class': 'my-form'}}) }}
    <div class="form-group mx-sm-4 mb-2">
        {{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
    </div>
    <div class="form-group mx-sm-4 mb-2">
        {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
    </div>
    <div class="form-check mx-sm-4">
        {{ form_row(registrationForm.agreeTerms, {'label_attr': {'class': 'form-check-label'}, 'attr': {'class': 'form-check-input'}}) }}
        <label class="form-check-label" for="{{ registrationForm.agreeTerms.vars.id }}">
    </div>

    <button type="submit" class="btn btn-primary my-btn  mx-sm-4 mb-2">Register</button>
    {{ form_end(registrationForm) }}
    
{% endblock %}
