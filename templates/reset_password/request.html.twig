{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Reset your password</h1>

    {{ form_start(requestForm,{'attr': {'class': 'my-form'}}) }}
     <div class="form-group mx-sm-4 mb-2">
        {{ form_row(requestForm.email, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group mx-sm-4">
        <p> Enter your email address, and we will send you a
                link to reset your password.</p>
    </div>

        <button class="btn btn-primary mx-sm-4 my-btn">Send password reset email</button>
    {{ form_end(requestForm) }}
{% endblock %}
