{% extends 'base.html.twig' %}

{% block title %}Wild Series{% endblock %}

{% block body %}
   <h1>Toutes les séries de la table program : </h1>
    {% for program in programs %}
        <div>
            <h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
            <p>{{ program.synopsis }}</p>
            <a href="{{ path("program_show", { slug: program.slug}) }}">Voir la fiche</a>
            <a href="{{ path('program_edit', {slug: program.slug}) }}">Éditer</a>
            <a href="{{ path('program_delete', {'id': program.id, '_token': csrf_token('delete' ~ program.id)}) }}">Supprimer</a>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    <div>
    <a href="{{ path('program_new') }}">Créer un nouveau programme</a>
    </div>
    <div>
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
    </div>
{% endblock %}