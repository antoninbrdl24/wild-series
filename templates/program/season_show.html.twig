{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ program.title }} - Saison {{ season.number }}</h1>

    <h2>Épisodes</h2>
    <ul>
        {% for episode in season.episodes %}
            <li>
             <a href="{{ path('program_episode_show', {programSlug:program.slug, seasonSlug: season.slug, episodeSlug: episode.slug }) }}">
                {{ episode.number }} - {{ episode.title }}
            </a>
            </li>
        {% endfor %}
    </ul>
     <a href="{{ path('app_episode_new') }}"> Créer un nouvel épisode </a>
{% endblock %}