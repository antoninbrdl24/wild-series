{% extends 'base.html.twig' %}

{% block title %}
Program {{ program.id }}
{% endblock %}

{% block body %}
<div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.synopsis }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            <p>Pays : {{ program.country }}</p>
            <p>Année : {{ program.year }}</p>
        </div>
    </div>
    <h2>Saisons</h2>
    <ul>
        {% for season in program.seasons %}
            <li>
                <a href="{{ path('program_season_show', {"program":program.id, "season": season.id }) }}">
                    Saison {{ season.number }} - {{ season.description }}
                </a>
            </li>
        {% endfor %}
    </ul>
    <h2>Acteurs :</h2>
    <ul>
        {% for actor in program.actors %}
            <li>{{ actor.name }}</li>
             <a href="{{ path('app_actor_show', {'id': actor.id}) }}">Voir la fiche de cet acteur  </a>
        {% else %}
            <li>Aucun acteur pour cette série</li>
        {% endfor %}
    </ul>
    <a href="{{ path('program_index') }}">
        Retour à la liste des programmes
    </a>
{% endblock %}  

    
